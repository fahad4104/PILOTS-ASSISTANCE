generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Manual {
  id           String   @id @default(cuid())
  key          String   @unique
  originalName String
  blobUrl      String
  blobPathname String
  openaiFileId String
  createdAt    DateTime @default(now())
}

model ActivityLog {
  id        String   @id @default(cuid())
  type      String   // LOGIN, APP_USAGE, REGISTRATION
  userId    String?
  userName  String?
  userEmail String?
  details   String?  // JSON string for additional details like app name
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([type])
  @@index([createdAt])
  @@index([userId])
}

